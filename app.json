{
  "expo": {
    "name": "My Car Buddy Technician",
    "slug": "mcbt",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses your location to track your current position on the map.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses your location to provide real-time tracking to customers even when the app is in the background.",
        "NSCameraUsageDescription": "This app needs access to your camera to take photos of service work and vehicle conditions.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to select and upload images of service work and vehicle conditions.",
        "NSPhotoLibraryAddUsageDescription": "This app needs permission to save photos to your library after capturing service images.",
        "UIBackgroundModes": [
          "location",
          "background-processing",
          "background-fetch",
          "remote-notification"
        ]
      },
      "config": {
        "googleMapsApiKey": "AIzaSyB1e_nM-v-G5EYZSrXjElyHo61I4qb5rNc"
      }
    },
    "android": {
      "package": "com.itglansa.mcbt",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION",
        "CAMERA",
        "READ_MEDIA_IMAGES",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyB1e_nM-v-G5EYZSrXjElyHo61I4qb5rNc"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "8e8b25c9-7fe9-49af-9a3c-61216354ad9e"
      },
      "API_BASE_URL": "https://api.mycarsbuddy.com/api/",
      "API_BASE_URL_IMAGE": "https://api.mycarsbuddy.com/",
      "RAZORPAY_KEY": "your_razorpay_key_here",
      "RAZORPAY_SECRET": "your_razorpay_secret_here",
      "GOOGLE_MAPS_APIKEY": "AIzaSyB1e_nM-v-G5EYZSrXjElyHo61I4qb5rNc"
    },
    "plugins": [
      [
        "expo-background-fetch",
        {
          "minimumInterval": 900
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icons/notification-icon.png",
          "color": "#017F77",
          "sounds": [
            "./assets/notificationtone.wav"
          ]
        }
      ],
      "expo-font",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you select and upload service images.",
          "cameraPermission": "The app accesses your camera to let you take photos of service work and vehicle conditions."
        }
      ],
      "./plugins/withAndroidManifestFix"
    ],
    "privacy": "public"
  }
}